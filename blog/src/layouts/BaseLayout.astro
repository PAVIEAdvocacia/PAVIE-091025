---
const {
  title = 'Blog — PAVIE | Advocacia',
  description = 'Conteúdos claros e éticos sobre Família, Sucessões e Patrimônio.',
} = Astro.props;
const canonical = new URL(Astro.url.pathname, Astro.site).toString();
---
<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta name="robots" content="index,follow" />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-M3GZYKFWZP"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-M3GZYKFWZP');
    </script>
    <style>
      :root { --fg:#0a0a0a; --muted:#555; --brand:#1e3a5f; }
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Inter, Arial, sans-serif; color: var(--fg); margin: 0; line-height: 1.6; }
      header, main, footer { max-width: 960px; margin: 0 auto; padding: 1.5rem; }
      header a { color: var(--brand); text-decoration: none; font-weight: 600; }
      .post-list { display: grid; gap: 1rem; }
      .card { border: 1px solid #e5e7eb; border-radius: 12px; padding: 1rem; }
      .card h2 { margin-top: 0; }
      .muted { color: var(--muted); font-size: .95rem; }
      footer { font-size: .9rem; color: var(--muted); }
      nav a { margin-right: .75rem; }
    </style>
  </head>
  <body>
    <header>
      <nav aria-label="breadcrumb">
        <a href="/">Início</a> · <strong>Blog</strong>
      </nav>
      <h1 style="margin:.5rem 0 0">Blog — PAVIE | Advocacia</h1>
      <p class="muted">Informação clara, prazos definidos e documentos corretos.</p>
    </header>
    <main><slot /></main>
    <footer>© {new Date().getFullYear()} PAVIE | Advocacia — Conteúdo informativo. Não constitui aconselhamento jurídico.</footer>
  </body>
</html>

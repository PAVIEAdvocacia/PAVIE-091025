---
// src/layouts/BlogPost.astro

interface HeroImage {
  src: string;
  alt: string;
}

interface Frontmatter {
  title: string;
  description: string;
  publishDate: Date;
  updatedDate?: Date;
  heroImage?: HeroImage;
  eixo?: string;
  persona?: string;
  funil?: 'TOFU' | 'MOFU' | 'BOFU';
  layoutType?: string;
  destaqueHome?: boolean;
  responsavelEditorial?: string;
}

interface Props {
  frontmatter: Frontmatter;
}

const { frontmatter } = Astro.props as Props;

const layoutLabelMap: Record<string, string> = {
  'guia-estruturado': 'Guia estruturado',
  'analise-de-caso': 'Análise de caso',
  'checklist-pratico': 'Checklist prático',
  faq: 'Perguntas frequentes (FAQ)',
  'opiniao-curta': 'Comentário / Nota rápida',
};

const layoutTipoLegivel =
  (frontmatter.layoutType && layoutLabelMap[frontmatter.layoutType]) ??
  'Guia estruturado';

const dataPublicacao = frontmatter.publishDate.toLocaleDateString('pt-BR', {
  day: '2-digit',
  month: 'long',
  year: 'numeric',
});

const dataAtualizacao = frontmatter.updatedDate
  ? frontmatter.updatedDate.toLocaleDateString('pt-BR', {
      day: '2-digit',
      month: 'long',
      year: 'numeric',
    })
  : null;
---

<article class="pv-post">
  <header class="pv-post__header">
    <div class="pv-post__kicker">
      {frontmatter.eixo && (
        <span class="pv-pill pv-pill--area">
          {frontmatter.eixo.replace(/-/g, ' ')}
        </span>
      )}

      <span class="pv-pill pv-pill--layout">
        {layoutTipoLegivel}
      </span>

      {frontmatter.funil && (
        <span class="pv-pill pv-pill--funil">
          Conteúdo {frontmatter.funil}
        </span>
      )}
    </div>

    <h1 class="pv-post__title">
      {frontmatter.title}
    </h1>

    <p class="pv-post__description">
      {frontmatter.description}
    </p>

    <div class="pv-post__meta">
      <span>
        Publicado em <time datetime={frontmatter.publishDate.toISOString()}>
          {dataPublicacao}
        </time>
      </span>

      {dataAtualizacao && (
        <span aria-label="Data de atualização">
          · Atualizado em{' '}
          <time datetime={frontmatter.updatedDate!.toISOString()}>
            {dataAtualizacao}
          </time>
        </span>
      )}

      {frontmatter.persona && (
        <span class="pv-post__persona">
          · Escrito para: {frontmatter.persona}
        </span>
      )}
    </div>

    {frontmatter.heroImage && (
      <figure class="pv-post__hero">
        <img
          src={frontmatter.heroImage.src}
          alt={frontmatter.heroImage.alt}
          loading="lazy"
        />
      </figure>
    )}

    {/* Blocos de “help text” conforme o tipo de layout lógico */}
    {frontmatter.layoutType === 'checklist-pratico' && (
      <aside class="pv-post__notice pv-post__notice--checklist">
        Este conteúdo foi estruturado como um <strong>checklist prático</strong>.
        Ao final do texto, você encontrará uma lista de verificação para uso
        em reuniões com clientes e na triagem de casos.
      </aside>
    )}

    {frontmatter.layoutType === 'analise-de-caso' && (
      <aside class="pv-post__notice pv-post__notice--case">
        Este texto segue o formato de <strong>análise de caso</strong>, com
        narrativa fática, enquadramento jurídico e lições práticas para casos
        semelhantes.
      </aside>
    )}

    {frontmatter.layoutType === 'faq' && (
      <aside class="pv-post__notice pv-post__notice--faq">
        Este conteúdo está organizado em formato de <strong>perguntas e
        respostas</strong>, para facilitar a consulta rápida por tema.
      </aside>
    )}
  </header>

  <main class="pv-post__body">
    <slot />
  </main>

  <footer class="pv-post__footer">
    {frontmatter.responsavelEditorial && (
      <p class="pv-post__responsavel">
        Revisão editorial: {frontmatter.responsavelEditorial}
      </p>
    )}

    <p class="pv-post__disclaimer">
      Conteúdo informativo, sem promessa de resultado. Não constitui
      consulta jurídica individualizada. Em caso concreto, recomenda-se
      atendimento personalizado.
    </p>
  </footer>
</article>

<style>
  /* Mantém o estilo base do template e adiciona só alguns ajustes de layout.
     Se o template já tiver classes utilitárias, estes estilos funcionam como
     refinamento, não como substituição. */

  .pv-post {
    max-width: 720px;
    margin: 3rem auto;
    padding: 0 1.5rem 4rem;
  }

  .pv-post__header {
    margin-bottom: 2rem;
  }

  .pv-post__kicker {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.06em;
  }

  .pv-pill {
    border-radius: 999px;
    padding: 0.2rem 0.75rem;
    border: 1px solid rgba(0, 0, 0, 0.05);
    background: rgba(0, 0, 0, 0.02);
  }

  .pv-pill--area {
    font-weight: 600;
  }

  .pv-pill--layout {
    font-style: italic;
  }

  .pv-pill--funil {
    opacity: 0.8;
  }

  .pv-post__title {
    font-size: clamp(2rem, 3vw, 2.4rem);
    line-height: 1.2;
    margin: 0 0 0.75rem;
  }

  .pv-post__description {
    margin: 0 0 1rem;
    font-size: 1rem;
    color: rgba(0, 0, 0, 0.75);
  }

  .pv-post__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: rgba(0, 0, 0, 0.6);
  }

  .pv-post__hero {
    margin: 2rem 0 0;
  }

  .pv-post__hero img {
    display: block;
    width: 100%;
    height: auto;
    border-radius: 1rem;
  }

  .pv-post__notice {
    margin-top: 1.5rem;
    padding: 0.9rem 1rem;
    border-radius: 0.75rem;
    font-size: 0.9rem;
    background: #fff7ea;
    border: 1px solid #f2dfc3;
  }

  .pv-post__body {
    margin-top: 2.5rem;
  }

  .pv-post__body :global(p) {
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .pv-post__body :global(h2) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .pv-post__body :global(ul),
  .pv-post__body :global(ol) {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .pv-post__footer {
    margin-top: 3rem;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
    padding-top: 1.5rem;
    font-size: 0.85rem;
    color: rgba(0, 0, 0, 0.65);
  }

  .pv-post__responsavel {
    margin-bottom: 0.5rem;
  }

  .pv-post__disclaimer {
    margin: 0;
  }
</style>

---
const { page = 1, totalPages = 1, base = '/blog/' } = Astro.props;
const pageHref = (n:number) => n===1 ? base : `${base}page/${n}/`;
---
<nav class="pagination" aria-label="Paginação">
  {page > 1 && <a href={pageHref(page-1)}>« Anterior</a>}
  {Array.from({length: totalPages}, (_,i)=>i+1).map(n=>(
    <span class={n===page?'active':''}><a href={pageHref(n)} aria-current={n===page?'page':undefined}>{n}</a></span>
  ))}
  {page < totalPages && <a href={pageHref(page+1)}>Próxima »</a>}
</nav>

---
interface Props {
  title: string;
  description?: string;
  canonical?: string;
}

const { title, description, canonical } = Astro.props;
const baseUrl = 'https://pavieadvocacia.com.br';
const fullUrl = canonical || `${baseUrl}${Astro.url.pathname}`;
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} — PAVIE | Advocacia</title>
  {description && <meta name="description" content={description} />}
  <link rel="canonical" href={fullUrl} />
  
  <!-- Google Analytics (GA4) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-M3GZYKFWZP"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('consent','default',{
      ad_user_data:'denied',
      ad_personalization:'denied',
      ad_storage:'denied',
      analytics_storage:'granted'
    });
    gtag('config','G-M3GZYKFWZP',{ send_page_view:true });
  </script>
  
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;900&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
  
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: #FAFAFA;
    }
    h1, h2, h3 {
      font-family: 'Playfair Display', serif;
    }
    .hero-gradient {
      background: linear-gradient(135deg, #1e3a5f 0%, #2d5a7b 100%);
    }
  </style>
</head>
<body>
  <header class="hero-gradient text-white">
    <div class="container mx-auto py-8 px-4">
      <a href="/" class="text-white/80 text-sm hover:underline">← Voltar ao site</a>
      <h1 class="text-3xl md:text-4xl font-bold mt-2">Blog PAVIE | Advocacia</h1>
      <nav class="mt-4">
        <ul class="flex gap-4 text-white/90 text-sm">
          <li><a href="/blog/" class="hover:underline">Início</a></li>
          <li><a href="/" class="hover:underline">Site</a></li>
          <li><a href="/#contato" class="hover:underline">Contato</a></li>
        </ul>
      </nav>
    </div>
  </header>
  
  <main class="container mx-auto my-10 px-4">
    <slot />
  </main>
  
  <footer class="bg-slate-900 text-white py-8">
    <div class="container mx-auto px-4 text-center text-sm">
      <p>© 2025 PAVIE | Advocacia — OAB/RJ 134.947</p>
      <p class="mt-2">
        <a href="/" class="underline">Site</a> ·
        <a href="/privacidade/privacidade.html" class="underline">Privacidade</a> ·
        <a href="/termos/termos.html" class="underline">Termos</a>
      </p>
    </div>
  </footer>
</body>
</html>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Busca os posts e ordena do mais recente para o antigo
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Blog" description="Respostas rápidas para seus problemas jurídicos.">
	
  <section class="py-16 text-center border-b border-slate-100 mb-12">
		<h1 class="text-4xl md:text-5xl font-serif font-bold text-slate-900 mb-4">
			Clareza e Agilidade.
		</h1>
		<p class="text-xl text-slate-500 max-w-xl mx-auto">
			Entenda seus direitos em 5 minutos. Sem complicação, direto ao ponto.
		</p>
	</section>

  <section class="grid md:grid-cols-2 gap-8">
		{posts.map((post) => (
			<article class="group bg-white border border-slate-200 rounded-xl overflow-hidden hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
				<a href={`/blog/${post.slug}/`} class="flex flex-col h-full">
          <div class="h-48 bg-slate-100 overflow-hidden relative">
            {post.data.heroImage ? 
              <img src={post.data.heroImage} alt="" class="w-full h-full object-cover group-hover:scale-105 transition duration-500"/> 
              : <div class="w-full h-full flex items-center justify-center text-slate-300 font-serif text-2xl">PAVIE</div>
            }
          </div>
          
          <div class="p-6 flex flex-col flex-grow">
            <p class="text-xs text-slate-400 mb-2 uppercase tracking-wide font-semibold">
              {post.data.pubDate.toLocaleDateString('pt-BR', { day: 'numeric', month: 'long', year: 'numeric' })}
            </p>
            
            <h2 class="text-xl font-bold text-slate-900 mb-2 leading-tight group-hover:text-blue-900 transition">
							{post.data.title}
						</h2>
            
            <p class="text-slate-600 text-sm mb-4 line-clamp-3 flex-grow">
							{post.data.description}
						</p>
            
            <div class="mt-4 pt-4 border-t border-slate-50 flex items-center text-blue-900 font-semibold text-sm">
              Ler em 5 minutos <span class="ml-2 group-hover:translate-x-1 transition">&rarr;</span>
            </div>
					</div>
				</a>
			</article>
		))}
	</section>

</BaseLayout>
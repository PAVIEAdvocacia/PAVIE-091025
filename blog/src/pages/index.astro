---
import { getCollection } from 'astro:content';
const posts = (await getCollection('posts'))
  .map(p => {
    const d = p.data.pubDate ?? p.data.date;
    return { ...p, _date: d ? new Date(d) : new Date(0) };
  })
  .sort((a,b) => +b._date - +a._date);
---
<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <title>Blog | PAVIE Advocacia</title>
    <meta name="description" content="Conteúdo jurídico com foco em sucessões, patrimônio e direito civil com repercussão internacional.">
  </head>
  <body>
    <main>
      <h1>Blog</h1>
      <ul>
        {posts.map((p) => (
          <li>
            <a href={`/blog/${p.slug}/`}>{p.data.title}</a>
            <small> — {p._date.toLocaleDateString('pt-BR')}</small>
            <em> · {p.data.type}</em>
          </li>
        ))}
      </ul>
    </main>
  </body>
</html>

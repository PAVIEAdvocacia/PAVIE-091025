---
const title = "Buscar no blog";
---
<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>

    <!-- Pagefind UI (gerado após indexação) -->
    <link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
    <script src="/pagefind/pagefind-ui.js" is:inline></script>
  </head>
  <body>
    <h1>{title}</h1>
    <div id="search"></div>

    <script is:inline>
      window.addEventListener('DOMContentLoaded', () => {
        new PagefindUI({
          element: "#search",
          showSubResults: true,
          // translations: { placeholder: "Pesquisar..." }
        });
      });
    </script>
  </body>
</html>

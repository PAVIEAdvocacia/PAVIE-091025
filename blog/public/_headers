# Segurança global
/*
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()

# Admin (Decap)
# OBS: uma única linha para a CSP; NADA de quebras por diretiva
/blog/admin/*
  Cache-Control: no-store
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https:; font-src 'self' data: https:; connect-src 'self' https://api.github.com https://github.com https://raw.githubusercontent.com https://unpkg.com https://cdn.jsdelivr.net; frame-ancestors 'none'; base-uri 'self'; form-action 'self'

# (Opcional) Funções do projeto (OAuth etc.) — desabilitar cache
 /api/*
  Cache-Control: no-store

# Pagefind — cache agressivo (novo padrão v1: /pagefind/)
 /pagefind/*
  Cache-Control: public, max-age=31536000, immutable

# Compatibilidade (se ainda houver referências legadas /_pagefind/)
 /_pagefind/*
  Cache-Control: public, max-age=31536000, immutable

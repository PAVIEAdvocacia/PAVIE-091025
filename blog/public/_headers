/* 
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  X-Frame-Options: DENY
  Content-Security-Policy: default-src 'self'; base-uri 'self'; object-src 'none'; form-action 'self'; frame-ancestors 'self'; upgrade-insecure-requests
*/

/* Cache agressivo para assets estáticos versionáveis (se aplicável) */
/assets/*
  Cache-Control: public, max-age=31536000, immutable

/* Pagefind ≥1.0 (novo diretório) */
 /pagefind/*
  Cache-Control: public, max-age=31536000, immutable

/* Pagefind legado (modo de compatibilidade detectado no build) */
 /_pagefind/*
  Cache-Control: public, max-age=31536000, immutable

/* Uploads do CMS (não versionados): cache curto para evitar desatualização */
 /uploads/*
  Cache-Control: public, max-age=86400

/* Sitemaps e robots */
 /sitemap*.xml
  Cache-Control: public, max-age=3600
 /robots.txt
  Cache-Control: public, max-age=3600

/* Admin do Decap CMS — políticas específicas (scripts CDN e GitHub OAuth) */
 /admin/*
  X-Frame-Options: SAMEORIGIN
  Content-Security-Policy: default-src 'self'; base-uri 'self'; object-src 'none'; frame-ancestors 'self';
    script-src 'self' 'unsafe-inline' https://unpkg.com https://cdn.jsdelivr.net;
    style-src  'self' 'unsafe-inline';
    img-src    'self' data: https://avatars.githubusercontent.com https://raw.githubusercontent.com https://user-images.githubusercontent.com https:;
    connect-src 'self' https://api.github.com https://github.com;
    frame-src  'self' https://github.com;
    upgrade-insecure-requests

/* Endpoints OAuth/handshake — permitem script inline mínimo do postMessage */
 /api/auth/*
  Content-Security-Policy: default-src 'none';
    script-src 'self' 'unsafe-inline';
    connect-src 'self' https://github.com https://api.github.com;
    img-src 'self' data:;
    style-src 'self' 'unsafe-inline';
    frame-ancestors 'self'

 /api/callback
  Content-Security-Policy: default-src 'none';
    script-src 'self' 'unsafe-inline';
    connect-src 'self';
    img-src 'self' data:;
    style-src 'self' 'unsafe-inline';
    frame-ancestors 'self'

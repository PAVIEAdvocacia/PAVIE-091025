---
// src/components/BlockCTA.astro
const { persona_publico = "pf", persona_estagio = "tofu" } = Astro.props;

const mapaRotulo = {
  pf: "Fale com um advogado para entender seu caso",
  pj: "Converse sobre políticas, contratos e governança jurídica",
  colega: "Vamos trocar referências e cases"
}[persona_publico];

const info = "Conteúdo informativo — não constitui aconselhamento jurídico.";
const urlContato = "/contato"; // ajuste para sua rota
---
<section aria-labelledby="cta">
  <h2 id="cta" class="sr-only">Ação recomendada</h2>
  <p>{info}</p>
  <p><a href={urlContato} rel="nofollow"> {mapaRotulo} </a></p>
  <p><small>Estágio da jornada: {persona_estagio.toUpperCase()}</small></p>
</section>
